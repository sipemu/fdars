#!/bin/bash
# Pre-commit hook for fdars project
# Runs cargo fmt and clippy checks before allowing commits

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Change to repository root
REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

# Check if there are any staged Rust files
STAGED_RS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -n "$STAGED_RS_FILES" ]; then
    echo -e "${YELLOW}Checking Rust formatting with cargo fmt...${NC}"

    # Run cargo fmt check from fdars-core directory
    cd "$REPO_ROOT/fdars-core"
    if ! cargo fmt -- --check; then
        echo -e "${RED}ERROR: Code is not formatted. Run 'cargo fmt' in fdars-core/ to fix.${NC}"
        exit 1
    fi
    echo -e "${GREEN}✓ Formatting check passed${NC}"

    echo -e "${YELLOW}Running cargo clippy...${NC}"

    # Run clippy with warnings as errors
    if ! cargo clippy --all-targets --all-features -- -D warnings; then
        echo -e "${RED}ERROR: Clippy found issues. Please fix them before committing.${NC}"
        exit 1
    fi
    echo -e "${GREEN}✓ Clippy check passed${NC}"
else
    echo -e "${GREEN}No Rust files staged, skipping Rust checks${NC}"
fi

echo -e "${GREEN}All pre-commit checks passed!${NC}"
exit 0
